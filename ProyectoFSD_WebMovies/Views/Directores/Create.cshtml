@model ProyectoFSD_WebMovies.Models.Director

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Director/a</h4>
<hr />

<div class="col-md-8 mb-3">
    <form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group my-2">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Nacionalidad" class="control-label"></label>
        <input asp-for="Nacionalidad" class="form-control" />
        <span asp-validation-for="Nacionalidad" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="FechaNacimiento" class="control-label"></label>
        <input asp-for="FechaNacimiento" class="form-control" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label>Imagen del Director</label>
        <label asp-for="ImagenArchivo" class="control-label">Imagen del Actor</label>
        <input asp-for="ImagenArchivo" type="file" accept=".jpg,.jpeg,.png" class="form-control" />
        <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <input type="submit" value="Crear nuevo director/a" class="btn btn-success" />
    </div>
</form>
</div>

<div class="my-3">
    <a asp-action="Index">Volver a "Directores"</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
