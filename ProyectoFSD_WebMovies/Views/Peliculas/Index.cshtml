@model IEnumerable<ProyectoFSD_WebMovies.Models.Pelicula>

@{
    ViewData["Title"] = "Películas";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Películas</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-success" asp-action="Create">+ Nueva Película</a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar Película" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>Título</th>
                <th>Sinopsis</th>
                <th>Duración</th>
                <th>Fecha Estreno</th>
                <th>Imagen</th>
                <th>Género</th>
                <th>Director</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Sinopsis</td>
                    <td>@item.Duracion</td>
                    <td>@item.FechaEstreno.ToShortDateString()</td>
                    <td>@item.ImagenPelicula</td>
                    <td>@item.Genero?.Nombre</td>
                    <td>@item.Director?.Nombre</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
