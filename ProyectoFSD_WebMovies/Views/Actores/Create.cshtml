@model ProyectoFSD_WebMovies.Models.Actor

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Información del Actor/Actriz</h4>
<hr />
<div class="col-md-8 mb-3">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group my-2">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label asp-for="Biografia" class="control-label"></label>
            <textarea asp-for="Biografia" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Biografia" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label asp-for="FechaNacimiento" class="control-label"></label>
            <input asp-for="FechaNacimiento" class="form-control" type="date" />
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>

        <div class="form-group my-2">
            <label asp-for="ImagenArchivo" class="control-label">Imagen del Actor</label>
            <input asp-for="ImagenArchivo" type="file" accept=".jpg,.jpeg,.png" class="form-control" />
            <span asp-validation-for="ImagenArchivo" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <input type="submit" value="Crear nuevo actor/actriz" class="btn btn-success" />
        </div>
    </form>
</div>


<div my-3>
    <a asp-action="Index">Volver a "Actores"</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
