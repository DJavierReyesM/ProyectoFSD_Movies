@model IEnumerable<ProyectoFSD_WebMovies.Models.Actor>

@{
    ViewData["Title"] = "Actores";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Actores</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-success" asp-action="Create">+ Nuevo Actor</a>
    </div>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="searchString" class="form-control" placeholder="Buscar Actor" />
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>Fecha Nacimiento</th>
                <th>Biografía</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.FechaNacimiento.ToShortDateString()</td>
                    <td>@item.Biografia</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagenRuta))
                        {
                            <img src="@item.ImagenRuta" width="60" height="90" style="object-fit:cover;" />
                        }
                        else
                        {
                            <img src="/imagenes/default.png" width="60" height="90" style="object-fit:cover;" />
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
